[diff]
	tool = vimdiff
[difftool]
	prompt = false
[alias]
	# The below aliases are considered legacy/deprecated...
	# Note, the best way to generate tags on checkout is with a git hook. Do the following in your repo:
	#    echo "ctags -R ." > .git/hooks/post-checkout
	#    chmod +x .git/hooks/post-checkout

	# This one may need some work...still not ideal
	# diffall = "! for name in $(git diff --name-only $1); do git difftool $1 $name; done"
	# Note that git alias shell commands are always run from the top level directory of the repo
	# checkout-gen-tags = !sh -c 'git checkout $1 && ctags -R .' -

	# May actually just want `git merge-base HEAD master`
	base = !git merge-base HEAD main
	changed-files = !git diff --name-only $(git base) | column
	changed-files-tree = !git diff --name-only $(git base) | tree --fromfile .
	stat = !git diff --stat $(git base)
	review = !git changed-files | column > .review_$(git branch --show-current | tr '/' '_').txt && REVIEW_BASE=$(git base) vim .review_$(git branch --show-current | tr '/' '_').txt
	resume-review = !REVIEW_BASE=$(git base) vim .review_$(git branch --show-current | tr '/' '_').txt
	graph = !git log --oneline --graph --decorate --all
[core]
	editor = "vim"
